---
import { ClientRouter } from "astro:transitions";
import { PUBLIC_GOOGLE_SITE_VERIFICATION } from "astro:env/client";
import { SITE } from "@/config";
import { withBase } from "@/utils/url";
import "@/styles/global.css";
import silktideCssUrl from "@/cookie-law/silktide-consent-manager.css?url";
import silktideJsUrl from "@/cookie-law/silktide-consent-manager.js?url";

export interface Props {
  title?: string;
  author?: string;
  profile?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
}

const {
  title = SITE.title,
  author = SITE.author,
  profile = SITE.profile,
  description = SITE.desc,
  ogImage = SITE.ogImage ? withBase(SITE.ogImage) : withBase("og.png"),
  canonicalURL = new URL(Astro.url.pathname, Astro.url),
  pubDatetime,
  modDatetime,
  scrollSmooth = false,
} = Astro.props;

const socialImageURL = new URL(ogImage, Astro.url);
const cookiePolicyHref = withBase("cookie-policy");

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: `${title}`,
  image: `${socialImageURL}`,
  datePublished: `${pubDatetime?.toISOString()}`,
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  author: [
    {
      "@type": "Person",
      name: `${author}`,
      ...(profile && { url: profile }),
    },
  ],
};
---

<!doctype html>
<html
  dir={SITE.dir}
  lang=`${SITE.lang ?? "en"}`
  class={`${scrollSmooth && "scroll-smooth"}`}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={withBase("favicon.svg")} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="sitemap" href={withBase("sitemap-index.xml")} />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Article Published/Modified time -->
    {
      pubDatetime && (
        <meta
          property="article:published_time"
          content={pubDatetime.toISOString()}
        />
      )
    }
    {
      modDatetime && (
        <meta
          property="article:modified_time"
          content={modDatetime.toISOString()}
        />
      )
    }

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Google JSON-LD Structured data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />

    <!-- Enable RSS feed auto-discovery  -->
    <!-- https://docs.astro.build/en/recipes/rss/#enabling-rss-feed-auto-discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title}
      href={new URL(withBase("rss.xml"), Astro.site)}
    />

    <meta name="theme-color" content="" />

    {
      // If PUBLIC_GOOGLE_SITE_VERIFICATION is set in the environment variable,
      // include google-site-verification tag in the heading
      // Learn more: https://support.google.com/webmasters/answer/9008080#meta_tag_verification&zippy=%2Chtml-tag
      PUBLIC_GOOGLE_SITE_VERIFICATION && (
        <meta
          name="google-site-verification"
          content={PUBLIC_GOOGLE_SITE_VERIFICATION}
        />
      )
    }

    <ClientRouter />

    <script is:inline src={withBase("toggle-theme.js")}></script>

    <!-- Cookie Law (Silktide Consent Manager) -->
    <link
      rel="stylesheet"
      id="silktide-consent-manager-css"
      href={silktideCssUrl}
    />
    {(() => {
      const html = `<script src="${silktideJsUrl}"></script>`;
      return <Fragment set:html={html} />;
    })()}
    <script is:inline set:html={`(function(){
      const cookiePolicyUrl = ${JSON.stringify(cookiePolicyHref)};
      const hasGtag = typeof window !== 'undefined' && typeof window.gtag === 'function';
      const hasDataLayer = typeof window !== 'undefined' && Array.isArray(window.dataLayer);

      window.silktideCookieBannerManager.updateCookieBannerConfig({
        background: { showBackground: true },
        cookieIcon: { position: 'bottomLeft' },
        cookieTypes: [
          {
            id: 'necessary',
            name: 'Necessari',
            description: '<p>Questi cookie sono necessari al corretto funzionamento del sito e non possono essere disattivati. Consentono funzioni di base come l’accesso e il salvataggio delle preferenze sulla privacy.</p>',
            required: true,
            onAccept: function () { console.log('Cookie necessari attivi'); }
          },
          {
            id: 'analytics',
            name: 'Analitici',
            description: '<p>Questi cookie ci aiutano a migliorare il sito raccogliendo informazioni aggregate sull’utilizzo delle pagine e sulla navigazione degli utenti.</p>',
            required: false,
            onAccept: function () {
              if (hasGtag) gtag('consent', 'update', { analytics_storage: 'granted' });
              if (hasDataLayer) window.dataLayer.push({ event: 'consent_accepted_analytics' });
            },
            onReject: function () {
              if (hasGtag) gtag('consent', 'update', { analytics_storage: 'denied' });
            }
          },
          {
            id: 'advertising',
            name: 'Marketing',
            description: '<p>Questi cookie permettono funzionalità aggiuntive e personalizzazione. Possono essere impostati da noi o da partner i cui servizi utilizziamo.</p>',
            required: false,
            onAccept: function () {
              if (hasGtag) gtag('consent', 'update', { ad_storage: 'granted', ad_user_data: 'granted', ad_personalization: 'granted' });
              if (hasDataLayer) window.dataLayer.push({ event: 'consent_accepted_advertising' });
            },
            onReject: function () {
              if (hasGtag) gtag('consent', 'update', { ad_storage: 'denied', ad_user_data: 'denied', ad_personalization: 'denied' });
            }
          }
        ],
        text: {
          banner: {
            description: '<p>Utilizziamo i cookie per migliorare l’esperienza d’uso, fornire contenuti personalizzati e analizzare il traffico. Consulta la <a href="' + cookiePolicyUrl + '" target="_blank">Cookie Policy</a>.</p>',
            acceptAllButtonText: 'Accetta tutti',
            acceptAllButtonAccessibleLabel: 'Accetta tutti i cookie',
            rejectNonEssentialButtonText: 'Rifiuta non essenziali',
            rejectNonEssentialButtonAccessibleLabel: 'Rifiuta i cookie non essenziali',
            preferencesButtonText: 'Preferenze',
            preferencesButtonAccessibleLabel: 'Apri preferenze cookie'
          },
          preferences: {
            title: 'Personalizza le preferenze dei cookie',
            description: '<p>Rispettiamo la tua privacy. Puoi scegliere di non consentire alcuni tipi di cookie. Le preferenze selezionate verranno applicate all’intero sito e potrai modificarle in qualsiasi momento dall’icona in basso a sinistra.</p>',
            creditLinkText: 'Ottieni questo banner gratuitamente',
            creditLinkAccessibleLabel: 'Ottieni questo banner gratuitamente'
          }
        }
      });
    })();`}></script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
