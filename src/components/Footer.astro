---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";
import { withBase } from "@/utils/url";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <Socials centered />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row gap-2 sm:gap-0">
      <span>Copyright &#169; {currentYear}</span>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <span>All rights reserved.</span>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <a href={withBase("/cookie-policy")} class="underline decoration-dashed underline-offset-4">Cookie Policy</a>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <a href={withBase("/privacy-policy")} class="underline decoration-dashed underline-offset-4">Privacy Policy</a>
    </div>
  </div>
</footer>
